ScreenManager:
    id: sm

<CustomDropDown>:
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')

<MenuBar>:
    pos_hint: {'top':1}
    #size_hint: 1, 0.5
    height: 40
    ActionView:
        use_separator: True
        ActionPrevious:
            id: testid

            title: root.get_time()
            on_press: app.root.transition.direction = 'right'
            on_release: app.root.current = 'home'
            with_previous: root.set_previous()
            #app_icon: 'atlas://data/images/defaulttheme/previous_normal'
            app_icon_width: 0.1

        ActionOverflow:

        ActionGroup:
            text: 'Screen'
            ActionButton:
                text: 'Test BG'
                on_press:
                    app.root.transition.direction = 'left'
                on_release: app.root.current = 'bgtest'

            ActionButton:
                text: 'Data'
                on_press:
                    app.root.transition.direction = 'left'
                on_release: app.root.current = 'data'
            ActionButton:
                text: 'Settings'
                on_press:
                    app.root.transition.direction = 'left'
                on_release: app.root.current = 'settings'
            ActionButton:
                text: 'Extras'
                on_press:
                    app.root.transition.direction = 'left'
                on_release: app.root.current = 'extras'

<HomeScreen>:
    name: 'data'
    BoxLayout:
        orientation: 'vertical'
        MenuBar
        Button:
            size_hint: 1,0.25
            text: 'dropdown'
        Image:
            size_hint: 1,2.5
            source: 'testgraph.jpg'
            #text: 'graph goes here'
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'average'
            Button:
                text: 'deviation'
            Button:
                text: 'average'
<DataScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        MenuBar
        Button

<BGScreen>:
    name: 'bgtest'

    BoxLayout:
        orientation: 'vertical'

        MenuBar
        CustomDropDown:
        Button:
            text: 'This is where you\'ll test BG'
            font_size: 20
            on_release: app.opendropdown()
<SettingsScreen>:
    name: 'settings'
    BoxLayout:
        orientation: 'vertical'
        MenuBar
        Button:
            text: 'setting 1'
        Button:
            text: 'setting 2'
        Button:
            text: 'setting 3'
        Button:
            text: 'setting 4'
        Button:
            text: 'setting 5'
<ExtrasScreen>:
    name: 'extras'
    BoxLayout:
        orientation: 'vertical'
        MenuBar
        Button:
            size_hint: 1,.5
            text: 'Extras!'
            on_release: app.flappy()
        Button:


