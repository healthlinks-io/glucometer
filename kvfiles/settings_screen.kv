
<SettingsScreen>:
    name: 'settings'
    #ScrollView:
        #effect_cls: DampedScollEffect
     #   do_scroll_x: False
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Brightness " + str(int(brightnesssldr.value))
            size_hint: 1,.4
        Slider:
            id: brightnesssldr
            max: 1000
            min: 10
            value: 500
            step: 10
            on_value: root.set_brightness(self.value)
        BoxLayout:
            Label:
                text: str(calibswitch.active)
            Switch:
                id: calibswitch
                on_active: root.calib_mode()
                
        Button:
            text: 'setting 3'
        Button:
            text: 'setting 4'
        Button:
            text: 'setting 5'
