<DateRow>:
    canvas:
        Color:
            rgba: (.2, .2, .2, 0.6)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: date
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        padding: 8,0
<EntryRow>:
    #on_parent: root.refresh_widths(12)
    BoxLayout:
        canvas:
            Color:
                rgba: (.25, .25, .25, 0.6)
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 0.25, 1
        Label:
            id: time
            padding: 8, 0
            text: 'hr:min'
    ScrollView:
        effect_cls: "ScrollEffect"
        do_scroll_y: False
        bar_width: 0
        BoxLayout:
            id: layout
            size_hint_x: None
            width: sum(x.width for x in layout.children)
            Label:
                id: bg
                #width: self.texture_size[0] + 10
                width: 30
                size_hint_x: None
            Label:
                id: carbs
                width: 30
                #width: self.texture_size[0] + 10
                size_hint_x: None
            Label:
                id: bolus
                #width: self.texture_size[0] + 10
                width: 30
                size_hint_x: None
            Label:
                id: notes
                width: self.texture_size[0] + 10
                size_hint_x: None
            Label:
                id: spacer
                width: 0
                size_hint_x: None
            Button:
                id: editbtn
                size_hint: None, 1
                width: self.height
                background_color: (.01,.87,.05,1)
                font_size: 10
                text: 'edit'
                on_release:
                    app.open_new_entry_popup()
            Button:
                id: deletebtn
                size_hint: None, 1
                width: self.height
                background_color: (1,0,0,1)
                font_size: 20
                text: 'X'
                on_release:
                    root.open_delete_dialogue_popup()
<DataScreen>:
    #on_enter:
    #    root.update_row_widths() # refresh widths because they can't be set until after the screen is rendered
    name: 'data'
    ScrollView:
        do_scroll_x: False
        GridLayout:
            id: layout
            cols: 1 # 5
            size_hint_y: None
            height: self.minimum_height
            row_force_default: True
            row_default_height: 30
<DeleteDialoguePopup>:
    size: 150, 100
    size_hint: None, None
    title: 'Are you sure?'
    BoxLayout:
        Button:
            text: "Yes"
            on_release:
                root.delete()
                app.refresh_data_screen()
                root.dismiss()
        Button:
            text: "No"
            on_release:
                root.dismiss()
