<DateRow>:
    canvas:
        Color:
            rgba: (.2, .2, .2, 0.6)
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: date
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        padding: 8,0
<EntryRow>:
    #on_parent: root.refresh_widths(12)
    BoxLayout:
        canvas:
            Color:
                rgba: (.25, .25, .25, 0.6)
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 0.25, 1
        Label:
            id: time
            padding: 8, 0
            text: 'hr:min'
    ScrollView:
        effect_cls: "ScrollEffect"
        do_scroll_y: False
        bar_width: 0
        BoxLayout:
            id: layout
            size_hint_x: None
            width: sum(x.width for x in layout.children)
            Label:
                id: bg
                width: self.texture_size[0] + 10
                size_hint_x: None
            Label:
                id: carbs
                width: self.texture_size[0] + 10
                size_hint_x: None
            Label:
                id: bolus
                width: self.texture_size[0] + 10
                size_hint_x: None
            Label:
                id: notes
                width: self.texture_size[0] + 10
                size_hint_x: None
            Label:
                id: spacer
                width: 0
                size_hint_x: None
            Button:
                id: deletebtn
                size_hint: None, 1
                width: self.height
                text: 'x'
<DataScreen>:
    on_enter: root.update_row_widths() # refresh widths because they can't be set until after the screen is rendered
    name: 'data'
    ScrollView:
        do_scroll_x: False
        GridLayout:
            id: layout
            cols: 1 # 5
            size_hint_y: None
            height: self.minimum_height
            row_force_default: True
            row_default_height: 30
